# Globals

saneGrep() {
  grep $@ | grep -v grep
}

alias -g L='|less'
alias -g G='| saneGrep'
alias -g H='|head'

alias ls="ls -Fhb --time-style=long-iso --color=auto"
alias l=ls
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias mv='nocorrect mv -vi'
alias cp='nocorrect cp -vi'
alias rm='rm -vi'
alias cl='clear'
alias psaux='ps aux G'
alias mkdir='nocorrect mkdir'
alias ltail='less +F'
alias gb='gitback'
alias dirs='dirs -pv'

# vim:set ft=zsh:
