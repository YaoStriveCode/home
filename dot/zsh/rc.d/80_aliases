# Globals

saneGrep() {
  grep $@ | grep -v grep
}

alias -g L='|less'
alias -g G='| saneGrep'
alias -g T='|stail'
alias -g TF='stail -f'
alias -g H='|head'

alias ls="ls -Fhb --time-style=long-iso --color=auto"
alias l=ls
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias mv='nocorrect mv -vi'
alias cp='nocorrect cp -vi'
alias rm='rm -vi'
alias cl='clear'
alias psaux='ps aux G'
alias mkdir='nocorrect mkdir'
alias ltail='less +F'
alias gb='gitback'
alias dirs='dirs -pv'

stail() {
	local delta=1
	case $TERM in
		screen*)
			# Caption line
			delta=$(($delta + 1))
			;;
	esac
	tail -n $(($LINES - $delta)) $@
}

# vim:set ft=zsh:
