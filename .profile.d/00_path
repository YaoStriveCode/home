#!/bin/sh

path_without()
{
    echo $PATH | tr ':' '\n' | grep -Fxv "$1" | tr '\n' ':'
}

append_path_component()
{
    [ -d $1 ] && export PATH=$(path_without "$1"):$1
}

prepend_path_component()
{
    [ -d $1 ] && export PATH=$1:$(path_without "$1")
}

append_path_component /sbin
append_path_component /usr/sbin

prepend_path_component $HOME/.local/bin
prepend_path_component $HOME/bin

# if [ -d /var/lib/gems ]; then
#     append_path_component /var/lib/gems/*/bin
# fi
# append_path_component /opt/mit-scheme/bin

prepend_path_component /usr/local/bin
prepend_path_component /usr/local/git/bin
prepend_path_component /opt/local/bin
prepend_path_component /opt/local/libexec/gnubin

cuda_root=/Developer/NVIDIA/CUDA-5.0
export DYLD_LIBRARY_PATH=$cuda_root/lib
append_path_component $cuda_root/bin
